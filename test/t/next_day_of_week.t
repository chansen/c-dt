use strict;
use warnings;

use Test::More 0.88;
use dtp qw[:all];

while (<DATA>) {
    s/\A \s* //x;
    next if /\A (?: \# | \z)/x;
    chomp;
    my ($y, $w, $d, $dow, $current, $ey, $ew, $ed) = split /,\s*/, $_;

    {
        my $dt = dt_from_ywd($y, $w, $d);
        my $exp = sprintf '%.4d-W%.2d-%d', $ey, $ew, $ed;
        my $got = sprintf '%.4d-W%.2d-%d', dt_to_ywd(dt_next_day_of_week($dt, $dow, $current));
        is($got, $exp, "dt_next_day_of_week($dt, $dow, $current)");
    }
}

done_testing;

